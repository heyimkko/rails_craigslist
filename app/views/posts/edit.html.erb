<%= form_for (@post) do |f| %>
  <% @categories.each do |category| %>
    <%= f.radio_button(:category_id, category.id) %>
    <%= f.label(:category_name, category.name) %>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_area :description %>

  <%= f.label :location %>
  <%= f.text_field :location %>  

  <%= f.label :price %>
  <%= f.text_field :price %>

  <%= f.label :email %>
  <%= f.text_field :email %>

<%= f.submit "Edit Post" %>
<% end %>
